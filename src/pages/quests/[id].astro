---
import Layout from '../../layouts/Default.astro'

import QuestDetail from '@components/QuestDetail/QuestDetail.vue'
import Sidebar from '@components/Sidebar/Sidebar.vue'

export function getStaticPaths() {
  return [
    { params: { id: 'quest_starter' } },
    { params: { id: 'quest_stake_100' } },
    { params: { id: 'quest_stake_500' } },
  ]
}
---

<Layout metaTitle="D Club | Quest">
  <div class="flex justify-center">
    <Sidebar client:load />
    <QuestDetail
      id="quest_starter"
      title="Become the first 30 supporters"
      description="start description description"
      badgeImageSrc="/assets/badge1.png"
    />
  </div>
</Layout>
