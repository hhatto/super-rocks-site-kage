---
import Tier from './Tier.vue'
---

<section class="flex flex-col">
  <h2 class="text-4xl mb-4">Join</h2>
  <div class="mb-8">Join Awesome Club in support of the awesome project.</div>

  <h3 class="text-2xl mb-4">Support with</h3>
  <div class="flex flex-col mb-8">
    <div class="flex items-center py-4">
      <input class="w-16" type="radio" id="dev" name="dev" value="dev" />
      <label class="w-16">$DEV</label>
      <img src="/assets/devtoken.png" width="50" height="50" alt="dev token" />
    </div>
    <div class="flex items-center">
      <input class="w-16" type="radio" id="eth" name="eth" value="eth" />
      <label class="w-16">$ETH</label>
      <div class="flex items-center">
        <img src="/assets/ETH.svg" width="50" height="50" alt="ethereum" />
        <span class="text-sm content-center justify-between"
          >$ETH is automatically replaced with $DEV</span
        >
      </div>
    </div>
  </div>

  <h3 class="text-2xl mb-4">Select a tier</h3>
  <div class="grid grid-cols-3 gap-8 mb-8">
    <Tier
      title="Supporter"
      id="supporter"
      description="100 $DEV"
      badgeImageSrc="/assets/badge1.png"
    />
    <Tier
      title="Sponsor"
      id="sponsor"
      description="1200 $DEV"
      badgeImageSrc="/assets/badge2.png"
    />
    <Tier
      title="Awesomer"
      id="awesomer"
      description="3000 $DEV"
      badgeImageSrc="/assets/badge3.png"
    />
  </div>
</section>
